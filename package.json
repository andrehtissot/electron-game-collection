        "cache-manager-fs-hash": "^0.0.7",
        "csvtojson": "^2.0.10",
        "csvwriter": "^1.3.0",
        "dexie": "^2.0.4",
        "glob": "^7.1.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.1",
        "react-window": "^1.8.3",
        "regexpu-core": "^4.5.4",
        "update-electron-app": "^1.4.2",
        "uuid": "^3.3.2"
