        "webpack-cli": "^3.3.12",
        "worker-loader": "^3.0.4"
    },
    "dependencies": {
        "cache-manager": "^3.4.0",
        "cache-manager-fs-hash": "^0.0.9",
        "csvtojson": "^2.0.10",
        "csvwriter": "^1.3.0",
        "dexie": "^3.0.2",
        "glob": "^9.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-window": "^1.8.5",
        "regexpu-core": "^4.7.1",
        "update-electron-app": "^2.0.1",
        "uuid": "^8.3.1"
    },
    "husky": {
        "hooks": {
            "pre-push": "check-for-leaks"
        }
    }
}
