{
    "name": "electron-game-collection",
    "productName": "GameCollection",
    "version": "1.0.0",
    "description": "Games collection manager",
    "main": "main.js",
    "scripts": {
        "prebuild": "rm -rf ./dist/*",
        "build": "webpack --progress --colors --mode production",
        "build-watch": "npm run prebuild;webpack --progress --colors --mode production --watch",
        "build-dev": "npm run prebuild;webpack --progress --colors --mode development",
        "build-dev-watch": "npm run prebuild;webpack --progress --colors --mode development --watch",
        "build-release": "scripts/build-release.sh",
        "start": "electron .",
        "start-dev": "electron . --debug --disable-gpu",
        "prepack": "check-for-leaks",
        "prettier": "find ./src -name '*.js' -or -name '*.ts' -or -name '*.tsx' -or -name '*.scss' | xargs prettier --write",
        "tslint": "npx tslint -p . --fix",
        "eslint": "npx eslint --fix ./main.js",
        "tsc": "npx tsc -p . --noEmit",
        "tsc:files": "npx tsc -p . --noEmit | grep -v node_modules"
    },
    "author": "AndrÃ© Augusto Tissot",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/andrehtissot/electron-game-collection"
    },
    "bugs": {
        "url": "https://github.com/andrehtissot/electron-game-collection/issues"
    },
    "homepage": "https://github.com/andrehtissot/electron-game-collection/blob/master/README.md",
    "keywords": [
        "steam",
        "games collection",
        "games manager"
    ],
    "platforms": [
        "mac",
        "windows",
        "linux"
    ],
    "engines": {
        "node": ">=10.15.3"
    },
    "typings": "src/typings",
    "devDependencies": {
        "@types/electron": "^1.6.10",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@types/react-router-dom": "^4.3.4",
        "@types/react-window": "^1.8.0",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "check-for-leaks": "^1.2.1",
        "copy-webpack-plugin": "^5.0.3",
        "css-loader": "^3.0.0",
        "devtron": "^1.4.0",
        "electron": "^5.0.6",
        "electron-builder": "^20.44.4",
        "electron-log": "^3.0.6",
        "electron-settings": "^3.2.0",
        "electron-shortcut-normalizer": "^1.0.0",
        "electron-winstaller": "^3.0.4",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "html-webpack-plugin": "^4.0.0-beta.5",
        "husky": "^2.7.0",
        "mini-css-extract-plugin": "^0.7.0",
        "mocha": "^6.1.4",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "request": "^2.88.0",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "signcode": "^1.0.0",
        "source-map-loader": "^0.2.4",
        "spectron": "^7.0.0",
        "standard": "^12.0.1",
        "style-loader": "^0.23.1",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-react": "^4.0.0",
        "tslint-react-hooks": "^2.1.1",
