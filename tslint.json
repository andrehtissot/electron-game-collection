{
    "defaultSeverity": "warning",
    "extends": ["tslint:recommended", "tslint-microsoft-contrib/latest", "tslint-react-hooks"],
    "rules": {
        "semicolon": [true, "never"],
        "missing-jsdoc": false,
        "no-relative-imports": false,
        "newline-per-chained-call": false,
        "non-literal-fs-path": false,
        "quotemark": [true, "single", "jsx-double"],
        "completed-docs": false,
        "no-regex-spaces": false,
        "type-literal-delimiter": false,
        "no-reserved-keywords": false,
        "no-suspicious-comment": false,
        "no-submodule-imports": false,
        "no-backbone-get-set-outside-model": false,
        "no-increment-decrement": false,
        "no-function-constructor-with-string-args": false,
        "function-constructor": true,
        "no-unnecessary-bind": false,
        "unnecessary-bind": true,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "arrow-parens": [true, "always"],
        "no-console": [true, "log"],
        "export-name": [true, { "allow": ["index"] }],
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "no-implicit-dependencies": [
            true,
            [
                "components",
                "configs",
                "helpers",
                "screens",
                "storage",
                "interfaces",
                "contexts",
                "routes",
                "worker-loader!."
            ]
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "react-hooks-nesting": "error",
        "strict-boolean-expressions": false,
        "prefer-type-cast": false,
        "array-type": [true, "array"],
        "no-eval": false
    },
    "rulesDirectory": ["node_modules/tslint-microsoft-contrib"]
}
